    <fragment android:name="fr.smardine.monvetcarnet.fragment.IdentificationFragment"
            android:id="@+id/identificationFragment"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    <fragment android:name="fr.smardine.monvetcarnet.fragment.VaccinFragment"
            android:id="@+id/VaccinFragment"
